{% extends 'backend.html.twig' %}

{% block body %}
    {{parent()}}
    <div class="container">
        <div class="col-md-12">    
            <h2>{{'Listado de Clubes'|trans}}</h2>
            <div class="actions">
             <a href="{{ path('backend_club_new') }}" class="btn btn-sm btn-info">{{'Nuevo Club'|trans}}</a>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>{{'Nombre'|trans}}</th>
                        <th>{{'Tel√©fono'|trans}}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for club in clubs %}
                    <tr>
                        <td><a href="{{ path('backend_club_edit', { 'id': club.id }) }}">{{ club.nombre }}</a></td>
                        <td><a href="{{ path('backend_club_edit', { 'id': club.id }) }}">{{ club.telefono}}</a></td>
                        <td class="actions">
                            <a href="{{ path('backend_club_edit', { 'id': club.id }) }}" class="btn btn-sm btn-primary">{{'Editar'|trans}}</a>
                            <a href="{{ path('backend_club_delete', { 'id': club.id }) }}" class="btn btn-sm btn-danger">{{'Eliminar'|trans}}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
 
        </div>
    </div>
{% endblock %}